<!DOCTYPE html>
<html>
  <head>
    <title>Styling Test</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <style>
      /* Simple CSS Test */
      .css-test {
        background-color: #4f46e5;
        padding: 2px;
        margin-bottom: 2rem;
      }
      .css-test h1 {
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
      }
      .css-test .card {
        background-color: white;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
      }
      .css-test p {
        color: #1f2937;
      }
      .css-test button {
        background-color: #10b981;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        margin-top: 1rem;
        border: none;
        cursor: pointer;
      }
      .css-test button:hover {
        background-color: #059669;
      }
    </style>
  </head>
  <body>
    <!-- CSS Test -->
    <div class="css-test">
      <h1>CSS Test</h1>
      <div class="card">
        <p>This is a test of regular CSS styles.</p>
        <button>CSS Button</button>
      </div>
    </div>

    <!-- Tailwind Test -->
    <div class="p-8 bg-blue-500">
      <h1 class="text-2xl font-bold text-white mb-4">
        Tailwind Test
      </h1>
      <div class="bg-white rounded-lg shadow-lg p-6">
        <p class="text-gray-800">
          This is a test of basic Tailwind classes.
        </p>
        <button class="mt-4 bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
          Tailwind Button
        </button>
      </div>
    </div>
  </body>
</html> 